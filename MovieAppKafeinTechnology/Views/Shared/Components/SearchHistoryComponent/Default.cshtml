@model List<SearchHistoryVM>
<div class="col-md-12 col-lg-3">
    <div class="menux-bg-x">
        <h2 class="solmenu-baslik">Önceki Aramalar</h2>
        <div class="solmenu">
            @if (Model.Count > 0)
            {
                @foreach (var item in Model.OrderByDescending(x => x.SearchDate))
                {
                    <a asp-controller="Movie" asp-action="Index" asp-route-query="@item.Name" class="text-decoration-none">
                        <p class="menu1">
                            @item.Name
                        </p>
                    </a>
                }

            }
        </div>
    </div>
</div>